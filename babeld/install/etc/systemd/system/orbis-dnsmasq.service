[Unit]
Description=ORBIS dnsmasq (DHCP only on br-ap)
After=orbis-network.service
Requires=orbis-network.service
PartOf=orbis-network.service

[Service]
Type=simple
ExecStart=/usr/sbin/dnsmasq -k --conf-file=/opt/orbis/network/generated/dnsmasq.conf
Restart=on-failure
RestartSec=2

[Install]
WantedBy=multi-user.target
